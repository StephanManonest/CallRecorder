<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="devapp.callrecorder.CallCenterActivity">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/relativeLayoutCallCenter">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewTitleCallCenter"
            android:background="@drawable/customer_72"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/title_2"
            android:id="@+id/textViewBaslikCallCenter"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="@color/accent_material_dark"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewCallCenter"
        android:layout_below="@id/relativeLayoutCallCenter"/>

</RelativeLayout>
